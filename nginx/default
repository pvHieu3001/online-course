upstream app1_server{
	server localhost:8888;
}

upstream app2_server{
	server localhost:8080;
}

upstream app3_server{
        server localhost:3000;
}

server {
        listen 443 ssl;
        listen [::]:443 ssl;

	ssl_certificate /etc/nginx/ssl/bundle.crt;
  ssl_certificate_key /etc/nginx/ssl/dogohiephong.key;
    
	root /var/www/html/online-wooden/fe/dist;

	index index.html index.htm index.nginx-debian.html;

	server_name dogohiephong.vn www.dogohiephong.vn;

	location / {
		try_files $uri $uri/ /index.html;
	}

	location /api/v1/ {
		proxy_pass		    http://app1_server/api/v1/;
		proxy_set_header	Host $host;
		proxy_set_header	X-Real-IP $remote_addr;
		proxy_set_header	X-Forwarded-For $proxy_add_x_forwarded_for;
		proxy_set_header	X-Forwarded-Proto $scheme;
		proxy_set_header	Upgrade $http_upgrade;
		proxy_set_header	Connection "upgrade";
		proxy_redirect		off;
		proxy_http_version	1.1;
	}

	location /uploads/ {
			root /var/www/;
			autoindex on;  # Optional: shows directory listing
			add_header Cache-Control "public, max-age=3600";
	}
	
	location /course/ {
		rewrite			^/course/(.*)$ /$1 break;
		proxy_pass		http://app3_server/;
		proxy_set_header	Host $host;
		proxy_set_header	X-Real-IP $remote_addr;
		proxy_set_header	X-Forwarded-For $proxy_add_x_forwarded_for;
		proxy_set_header	X-Forwarded-Proto $scheme;
		proxy_set_header	Upgrade $http_upgrade;
		proxy_set_header	Connection "upgrade";
		proxy_redirect		off;
		proxy_http_version	1.1;
		
	}
	
}

server {
	listen 443 ssl http2;
	listen [::]:443 ssl;

	ssl_certificate     /etc/ssl/cloudflare/hocfree.crt;
  ssl_certificate_key /etc/ssl/cloudflare/hocfree.key;
    
	root /var/www/html/online-course/fe/dist;

	index index.html index.htm index.nginx-debian.html;

	server_name hocfree.vn www.hocfree.vn;

	location / {
		try_files $uri $uri/ /index.html;
	}

	location /api/v1/ {
		proxy_pass		    http://app2_server/api/v1/;
		proxy_set_header	Host $host;
		proxy_set_header	X-Real-IP $remote_addr;
		proxy_set_header	X-Forwarded-For $proxy_add_x_forwarded_for;
		proxy_set_header	X-Forwarded-Proto $scheme;
		proxy_set_header	Upgrade $http_upgrade;
		proxy_set_header	Connection "upgrade";
		proxy_redirect		off;
		proxy_http_version	1.1;
	}

	location /uploads/ {
			root /var/www/html/online-course/;
			autoindex on;  # Optional: shows directory listing
			add_header Cache-Control "public, max-age=3600";
	}
}

server {
	listen 3000 default_server;
	listen [::]:3000 default_server;

    
	root /var/www/html/online-course/fe/dist;

	
	index index.html index.htm index.nginx-debian.html;

	server_name _;

	location / {
		try_files $uri $uri/ /index.html;
	}

}

server {
	listen 8300 default_server;
	listen [::]:8300 default_server;

    
	root /var/www/html/OnlineCourse/fe/dist;

	
	index index.html index.htm index.nginx-debian.html;

	server_name _;

	location / {
		try_files $uri $uri/ /index.html;
	}

}

server {
	listen 9200 default_server;
	listen [::]:9200 default_server;

    
	root /var/www/html/online-wooden/fe/dist;

	
	index index.html index.htm index.nginx-debian.html;

	server_name _;

	location / {
		try_files $uri $uri/ /index.html;
	}

}

server {
	listen 9011 default_server;
	listen [::]:9011 default_server;

	root /var/www/html;

	index index.html index.htm index.nginx-debian.html;

	server_name _;

	location / {
		try_files $uri $uri/ =404;
	}

}

server {
	listen 80 default_server;
	listen [::]:80 default_server;

	server_name dogohiephong.vn www.dogohiephong.vn;
	
	location / {
		return 301 https://$host$request_uri;
	}
}
